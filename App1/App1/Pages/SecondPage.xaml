<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.SecondPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="Name"
                   Text="{Binding Name}"
                   FontAttributes="Bold"
                   FontSize="24"
                   TextColor="Black"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
            <Label x:Name="Followers"
                   Text="{Binding Followers}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
            <Label x:Name="Genres"
                   Text="{Binding Genres}"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
            <Label x:Name="Popularity"
                   Text="{Binding Popularity}"
                   FontAttributes="Italic"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
            <Image x:Name="Image"
                   Source="{Binding ImageSource}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>